---
import '../styles/global.css';
import type { SiteSection } from '../data/siteSections';
import { primaryNav } from '../data/siteSections';

const {
  title = 'CobolDepot',
  description = 'A modern COBOL package manager with a static docs experience.',
  sections,
} = Astro.props as {
  title?: string;
  description?: string;
  sections?: SiteSection[];
};
---
<!DOCTYPE html>
<html lang="en" data-theme="coboldepot">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;600&family=Material+Symbols+Outlined&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-[--astro-body-bg] text-base-content">
    <header class="px-6 py-4 border-b border-base-300 bg-base-100/80 backdrop-blur">
      <div class="max-w-6xl mx-auto flex flex-wrap items-center gap-4">
        <a href="/" class="text-2xl font-bold text-primary">CobolDepot</a>
        <nav class="flex-1">
          <ul class="flex flex-wrap gap-3 text-sm font-medium">
            {primaryNav.map((item) => (
              <li>
                <a
                  class="px-3 py-2 rounded-lg hover:bg-primary/10 focus-visible:outline focus-visible:outline-2 focus-visible:outline-primary"
                  href={item.href}
                >
                  {item.name}
                </a>
              </li>
            ))}
          </ul>
        </nav>
        <a class="btn btn-sm btn-primary" href="/docs">Get Started</a>
      </div>
    </header>

    <main class="px-6 py-10">
      <div class="max-w-6xl mx-auto">
        <slot />
      </div>
    </main>

    <footer class="px-6 py-10 border-t border-base-300 bg-base-200">
      <div class="max-w-6xl mx-auto flex flex-col gap-2 text-sm text-base-content/80">
        <p>&copy; {new Date().getFullYear()} CobolDepot. Built for mainframe teams.</p>
        <p>
          Cloudflare Pages deploys from <code>main</code>. Preview builds are created for every pull request to
          validate Docs, Packages, and Search updates before release.
        </p>
      </div>
    </footer>
  </body>
</html>
